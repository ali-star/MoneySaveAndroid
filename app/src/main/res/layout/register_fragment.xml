<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_height="90dp"
        android:layout_marginTop="70dp"
        android:layout_width="80dp"
        android:src="@drawable/ic_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:gravity="center"
        android:id="@+id/textView2"
        android:layout_height="54dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:text="@string/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoImageView" />

    <EditText
        android:background="@drawable/oval_background"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="@string/email"
        android:id="@+id/emailEditText"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:background="@drawable/oval_background"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_password_icon"
        android:hint="@string/username"
        android:id="@+id/usernameEditText"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emailEditText" />

    <EditText
        android:background="@drawable/oval_background"
        android:drawablePadding="15dp"
        android:drawableStart="@drawable/ic_password_icon"
        android:hint="@string/password"
        android:id="@+id/repeatPasswordEditText"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameEditText" />

    <ir.siriusapps.moneysave.customView.GradientBlurLayout
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="0dp"
        app:gbl_angle="45"
        app:gbl_blurRadius="20dp"
        app:gbl_endColor="#0BB856"
        app:gbl_radius="-1dp"
        app:gbl_startColor="#0BB856"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/loginButton" />

    <ir.siriusapps.moneysave.customView.GradientButton
        android:gravity="center"
        android:id="@+id/registerButton"
        android:layout_height="54dp"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_width="match_parent"
        android:text="@string/register_upper"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:gb_angle="45"
        app:gb_endColor="#0BB856"
        app:gb_radius="15dp"
        app:gb_startColor="#42DC0B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/repeatPasswordEditText"
        app:layout_constraintStart_toStartOf="@+id/repeatPasswordEditText"
        app:layout_constraintTop_toBottomOf="@+id/repeatPasswordEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>
