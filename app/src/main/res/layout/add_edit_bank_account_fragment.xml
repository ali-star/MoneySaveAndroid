<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
		xmlns:android="http://schemas.android.com/apk/res/android">
	
	<data>
		<variable
				name="viewModel"
				type="ir.siriusapps.moneysave.presenter.ui.addEditBankAccountFragment.AddEditBankAccountViewModel" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_margin="10dp">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical">
			
			<EditText
					android:id="@+id/accountNameEditText"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:hint="@string/AccountName"
					android:inputType="text"
					android:text="@={ viewModel.accountName }"
					android:maxLines="1"
					android:layout_marginTop="25dp"/>
			
			<EditText
					android:id="@+id/accountNumberEditText"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:hint="@string/AccountNumber"
					android:inputType="text"
					android:text="@={ viewModel.accountNumber }"
					android:maxLines="1"
					tools:ignore="TextFields"
					android:layout_marginTop="25dp"/>
			
			<EditText
					android:id="@+id/cardNumberEditText"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:hint="@string/CardNumber"
					android:inputType="text"
					android:text="@={ viewModel.cardNumber }"
					android:maxLines="1"
					tools:ignore="TextFields"
					android:layout_marginTop="25dp" />
			
			<Button
					android:id="@+id/nextButton"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:onClick="@{ ()-> viewModel.saveBankAccount() }"
					android:text="@string/Next"
					android:layout_marginTop="50dp"/>
			
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>