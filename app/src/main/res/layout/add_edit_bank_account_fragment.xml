<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools">
	
	<data>
		
		<variable
				name="viewModel"
				type="ir.siriusapps.moneysave.presenter.ui.addEditBankAccountFragment.AddEditBankAccountFragmentViewModel" />
	</data>
	
	<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@drawable/header_color_background">
		
		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/money_save"
				android:textColor="@color/color_white"
				android:textSize="14sp"
				app:layout_constraintBottom_toTopOf="@+id/addAccountLayout"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />
		
		<LinearLayout
				android:id="@+id/addAccountLayout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="74dp"
				android:background="@drawable/rounded_background"
				android:gravity="center_horizontal"
				android:orientation="vertical"
				android:paddingStart="30dp"
				android:paddingEnd="30dp"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintStart_toStartOf="parent">
			
			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginTop="14dp"
					android:gravity="center"
					android:text="@string/title_new_account"
					android:textColor="@color/color_black"
					android:textSize="14sp"
					android:textStyle="bold" />
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="80dp"
					android:paddingStart="25dp"
					android:text="@string/title_name_card"
					android:textColor="@color/color_black"
					android:textSize="14sp"
					tools:ignore="RtlSymmetry" />
			
			<EditText
					android:id="@+id/accountNameEditText"
					android:layout_width="match_parent"
					android:layout_height="64dp"
					android:layout_marginTop="8dp"
					android:background="@drawable/oval_background"
					android:hint="@string/title_account_name"
					android:inputType="text"
					android:maxLines="1"
					android:paddingStart="25dp"
					android:text="@={ viewModel.accountName }"
					tools:ignore="RtlSymmetry" />
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:paddingStart="25dp"
					android:text="@string/title_bank_account_number"
					android:textColor="@color/color_black"
					android:textSize="14sp"
					tools:ignore="RtlSymmetry" />
			
			<EditText
					android:id="@+id/accountNumberEditText"
					android:layout_width="match_parent"
					android:layout_height="64dp"
					android:layout_marginTop="8dp"
					android:background="@drawable/oval_background"
					android:hint="@string/AccountNumber"
					android:inputType="text"
					android:maxLines="1"
					android:paddingStart="25dp"
					android:text="@={ viewModel.accountNumber }"
					tools:ignore="RtlSymmetry,TextFields" />
			
			<TextView
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="20dp"
					android:paddingStart="25dp"
					android:text="@string/title_credit"
					android:textColor="@color/color_black"
					android:textSize="14sp"
					tools:ignore="RtlSymmetry" />
			
			<EditText
					android:id="@+id/cardNumberEditText"
					android:layout_width="match_parent"
					android:layout_height="64dp"
					android:layout_marginTop="8dp"
					android:background="@drawable/oval_background"
					android:hint="@string/CardNumber"
					android:inputType="text"
					android:maxLines="1"
					android:paddingStart="25dp"
					android:text="@={ viewModel.cardNumber }"
					tools:ignore="RtlSymmetry,TextFields" />
			
			<ir.siriusapps.moneysave.customView.GradientButton
					android:id="@+id/button"
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:layout_marginTop="50dp"
					android:onClick="@{ ()-> viewModel.saveBankAccount() }"
					android:text="@string/Next"
					app:gb_angle="45"
					app:gb_endColor="@color/darkGreen"
					app:gb_startColor="@color/lightGreen"
					app:gb_radius="16" />
			
			<ir.siriusapps.moneysave.customView.GradientBlurLayout
					android:layout_width="match_parent"
					android:layout_height="48dp"
					android:layout_marginTop="50dp"
					app:gbl_angle="45"
					app:gbl_endColor="@color/lightGreen"
					app:gbl_startColor="@color/darkGreen"
					app:gbl_radius="16"
					app:gbl_blurRadius="200"/>
		
		</LinearLayout>
	</androidx.constraintlayout.widget.ConstraintLayout>
</layout>